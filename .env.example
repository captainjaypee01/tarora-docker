# --- Project ---
COMPOSE_PROJECT_NAME=

# --- Database ---
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_PORT=5432

# --- API ---
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:4173,http://localhost:5173

# --- MQTT ---
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_BASE=simulators

# Device topology
DEVICE_TYPES=thermostat,air_quality,door_sensor,energy_meter
DEVICES_PER_TYPE=3

# Publish behaviour
PUBLISH_INTERVAL_SEC=20          # base period in seconds = 2
PUBLISH_JITTER_SEC=10          # +/- jitter per publish = 1
OFFLINE_PROB=0.02               # probability a device goes offline at any tick
OFFLINE_DURATION_SEC=5          # how long a device stays offline

# Misc
RANDOM_SEED=42
LOG_LEVEL=INFO

# --- AI (optional) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
OPENAI_ENABLE_REASONING=1        # send reasoning field (gpt-5 supports it)

INSIGHTS_CACHE_TTL=120
INSIGHTS_MAX_TOKENS=500
INSIGHTS_DOWNSAMPLE=120
INSIGHTS_INCLUDE_SAMPLES=0
OPENAI_USE_RESPONSES="0"

# --- Frontend ---
FRONTEND_PORT=4173
# Frontend build-time env (Vite reads VITE_* at build)
VITE_API_URL=http://localhost:${BACKEND_PORT}
VITE_WS_URL=ws://localhost:${BACKEND_PORT}/ws/telemetry